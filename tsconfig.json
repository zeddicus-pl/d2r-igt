{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "Node",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "inlineSourceMap": true,
    "skipLibCheck": true
  },
  "ts-node": {
      "esm": true
  },
  "lib": ["esnext"],
  "files": [
    "igt.ts",
    "cli.ts"
  ]
}